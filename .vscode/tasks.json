{
    "version": "2.0.0",
    "command": "dotnet",
    "type": "shell",
    "args": [],
    "options": {
        "env": {
            "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "cwd": "${workspaceRoot}/src/WorldTripLog.Web"
    },
    "tasks": [
        {
            "taskName": "build",
            "args": [
                "WorldTripLog.Web.csproj"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "watch",
            "args": [
                "run"
            ],
            "group": "test",
            "problemMatcher": "$msCompile"
        }
    ]
}
